@model NewsDetailViewModel
@{
    <title>@Model.News.Name</title>
    <meta property="og:title" content="@Model.News.SEOTitle" />
    <meta property="og:description" content="@Model.News.SEODescription" />
    <meta property="og:image" content="@Model.News.Image" />
    <meta http-equiv="keywords" name="keywords" content="@Model.News.SEOKeyword" />
    <meta http-equiv="description" name="description" content="@Model.News.SEODescription" />
    <meta name="author" content="bqlrphongholamvien.vn">
}
<div class="row">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12 newsDetail">
                @if (Model.News != null)
                {
                    <p class="posttitle">@Model.News.Name</p>
                    <hr class="postline" />
                    <p>@Html.Raw(minhlamcons.Extensions.StringProcessingExtenssion.processed_img(Model.News.Content))</p>
                }
            </div>
            
        </div>
        <div class="row">
            <div class="col-md-12">
                @if (Model.HotNews != null)
                {
                    <p class="sidebartitle">TIN NỔI BẬT</p>
                    <div class="sidebarcontent">
                        @foreach (var news in Model.HotNews)
                        {
                            <div class="row" style="margin-bottom:15px">
                                <div class="col-md-2">
                                    <a href="@news.Url">
                                        <img class="img-fluid" style="max-height:126px" src="~/uploads/news/@news.Image" />
                                    </a>
                                </div>
                                <div class="col-md-10">
                                    <a href="@news.Url">@news.Name</a>
                                    <div>
                                        @news.Des
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        var iframe = $('iframe');
        var src = iframe.attr('src');

        if (src.indexOf('#') === -1) {
            iframe.attr('src', src + '#zoom=100');
        }
    });
</script>
<style>
    iframe {
        width: 100%;
        height: 90vh;
    }
</style>
